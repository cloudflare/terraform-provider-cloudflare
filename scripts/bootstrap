#!/usr/bin/env bash

set -e

cd "$(dirname "$0")/.."

if [ -f "Brewfile" ] && [ "$(uname -s)" = "Darwin" ]; then
  brew bundle check >/dev/null 2>&1 || {
    echo "==> Installing Homebrew dependencies…"
    brew bundle
  }
fi

echo "==> Installing Go dependencies…"

# pull in cloudflare-go@next until we cut a fresh release
go get github.com/cloudflare/cloudflare-go/v3@next

go mod tidy
